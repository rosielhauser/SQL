CREATE TABLE Zelda_Characters(
id INTEGER PRIMARY KEY,
character_id INTEGER,
name TEXT,
race TEXT,
title TEXT);

INSERT INTO Zelda_Characters (character_id, name, race, title) VALUES (1, "Link", "Hylian", "knight");
